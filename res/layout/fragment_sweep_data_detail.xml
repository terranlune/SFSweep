<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.sfsweep.android.fragments.SweepDataDetailFragment" >

    <TextView
        android:id="@+id/tvStreetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Street Name"
        android:textColor="@color/gunmetal"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/tvSweepingInProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStreetName"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white"
        android:text="Sweeping in progress! (ends in 2h)"
        android:textColor="@color/sweepingInProgress"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvNextSweeping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvSweepingInProgress"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white"
        android:text="Wednesday 8am-10am (in 3 days)"
        android:textColor="@color/gunmetal"
        android:textSize="16sp" />
   
    <FrameLayout
        android:id="@+id/flIconContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNextSweeping"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:layout_centerHorizontal="true" />
     
    <FrameLayout
        android:id="@+id/flNotifierContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flIconContainer"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_centerHorizontal="true" />
    
</RelativeLayout>